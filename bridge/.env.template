# QuantumTrader-Pro Bridge Server Configuration Template
# Copy this file to .env and configure with your values

# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=production

# Security Configuration
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARACTERS_LONG
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# MT4/MT5 Configuration
MT_PLATFORM=MT5                           # Options: MT4, MT5
MT_SERVER=your.broker.demo.server:443     # Your broker's demo server
MT_ACCOUNT=YOUR_DEMO_ACCOUNT_NUMBER       # Demo account number
MT_PASSWORD=YOUR_DEMO_PASSWORD            # Demo account password

# CORS Configuration
# Add your Flutter app's IP/domain
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://192.168.1.100:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15                      # Minutes
RATE_LIMIT_MAX_REQUESTS=100              # Max requests per window
TRADE_RATE_LIMIT_MAX=10                  # Max trade requests per window

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000              # Milliseconds
WS_MAX_CLIENTS=100
WS_MESSAGE_SIZE_LIMIT=1048576            # 1MB

# Logging Configuration
LOG_LEVEL=info                           # Options: error, warn, info, debug
LOG_FILE=logs/bridge.log
LOG_MAX_SIZE=10485760                    # 10MB
LOG_MAX_FILES=5

# SSL/TLS Configuration (Production)
# SSL_ENABLED=false
# SSL_CERT_PATH=certs/cert.pem
# SSL_KEY_PATH=certs/key.pem

# Database Configuration (Optional for production)
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@localhost:5432/quantumtrader
# REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9090
# SENTRY_DSN=https://your-sentry-dsn

# Development/Testing
MOCK_TRADING=false                       # Set to true for paper trading
MOCK_DELAY_MS=100                        # Simulated network delay

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_HTTP_FALLBACK=true
ENABLE_TELEGRAM_BOT=false
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_IF_ENABLED

# Performance Tuning
MAX_TICK_HISTORY=1000                    # Number of ticks to keep in memory
CLEANUP_INTERVAL=3600000                 # 1 hour in milliseconds
CACHE_TTL=60                            # Seconds

# API Keys (if using external services)
# ALPHA_VANTAGE_KEY=your_key_here
# FINNHUB_KEY=your_key_here