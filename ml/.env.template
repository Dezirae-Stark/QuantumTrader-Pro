# QuantumTrader-Pro ML Engine Configuration Template
# Copy this file to .env and configure with your values

# ML Engine Configuration
PREDICTOR_UPDATE_INTERVAL=10              # Seconds between prediction cycles
CONFIDENCE_THRESHOLD=0.7                  # Minimum confidence for signals
PREDICTION_HORIZON=5                      # Number of candles to predict

# Monitored Symbols
SYMBOLS=EURUSD,GBPUSD,XAUUSD,BTCUSD,USDJPY

# Model Configuration
MODEL_VERSION=2.0
USE_ENSEMBLE=true
ENSEMBLE_MODELS=quantum,chaos,technical,ml

# Model Weights (must sum to 1.0)
WEIGHT_QUANTUM=0.25
WEIGHT_CHAOS=0.20
WEIGHT_TECHNICAL=0.15
WEIGHT_ML=0.40

# Performance Configuration
USE_GPU=true                             # Enable CUDA if available
BATCH_SIZE=32
NUM_WORKERS=4
MAX_MEMORY_GB=8

# Data Configuration
LOOKBACK_PERIOD=100                      # Historical candles for analysis
MIN_DATA_POINTS=50                       # Minimum data required
DATA_SOURCE_PATH=../bridge/data/
PREDICTION_OUTPUT_PATH=../predictions/

# Feature Engineering
ENABLE_TECHNICAL_INDICATORS=true
ENABLE_MARKET_MICROSTRUCTURE=true
ENABLE_SENTIMENT_ANALYSIS=false

# Risk Management
MAX_POSITION_SIZE=0.1                    # 10% of capital
MAX_DAILY_TRADES=20
MAX_CORRELATION=0.85                     # Max correlation between positions

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=logs/ml_engine.log
LOG_PREDICTIONS=true                     # Log all predictions for analysis

# Model Storage
MODEL_PATH=models/
CHECKPOINT_INTERVAL=3600                 # Save model every hour
MAX_CHECKPOINTS=24

# Backtesting Configuration
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2023-12-31
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_COMMISSION=0.0001               # 1 pip

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8081
ALERT_ON_ERROR=true
ALERT_EMAIL=alerts@yourdomain.com

# Development/Debug
DEBUG_MODE=false
SAVE_FEATURE_IMPORTANCE=true
PLOT_PREDICTIONS=false