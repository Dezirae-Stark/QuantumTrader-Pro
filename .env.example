# QuantumTrader-Pro Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# ENVIRONMENT
# ================================
ENV=production
# Options: production | staging | demo | development

# ================================
# DATA SOURCE
# ================================
# CRITICAL: Set to false in production!
USE_SYNTHETIC_DATA=false

# ================================
# BROKER API CREDENTIALS
# ================================
# Choose your broker: mt4 | mt5 | oanda | binance | lmax | generic
BROKER_PROVIDER=generic

# API connection details
BROKER_API_URL=https://api.yourbroker.com
BROKER_API_KEY=your_api_key_here
BROKER_API_SECRET=your_api_secret_here

# MT4/MT5 specific
BROKER_SERVER=YourBroker-Server
BROKER_ACCOUNT=123456

# ================================
# API SERVER
# ================================
PORT=8080
NODE_ENV=production

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5
TRADE_RATE_LIMIT_MAX=30

# ================================
# SECURITY
# ================================
REQUIRE_AUTHENTICATION=true

# ================================
# NOTIFICATIONS
# ================================
# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord
DISCORD_WEBHOOK_URL=

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
# Options: DEBUG | INFO | WARNING | ERROR | CRITICAL

# ================================
# ML ENGINE
# ================================
ML_CONFIDENCE_THRESHOLD=70
QUANTUM_CONFIDENCE_THRESHOLD=70
MAX_PRICE_MOVE_PCT=10.0

# ================================
# TRADING PARAMETERS
# ================================
MAX_RISK_PER_TRADE_PCT=2.0
MAX_DAILY_RISK_PCT=5.0
MAX_SPREAD_PIPS=3.0
MIN_STOP_LOSS_PIPS=20.0

# ================================
# LHFX DEMO (for testing only)
# ================================
LHFX_SERVER=LHFXDemo-Server
LHFX_DEMO_ACCOUNT=194302
